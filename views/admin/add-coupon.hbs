<section>
  <div class=" container row">
    <div class="ml-5 col-md-6">
      <h2 class="text-center mt-5">Add Products</h2>
      <form action="/admin/add-coupon" method="post" class="text-danger" id="addProduct">

        <label class="text-dark" for="">Coupon label</label>
        <input type="text" name="name" class="form-control" placeholder="Enter coupon name"  required><br>

      

        <label for="" class="text-dark">Offer</label>
        <input type="number" name="offer" class="form-control"  placeholder="Enter offer % " required><br>

        <label for="" class="text-dark">Validity</label>
        <input type="date"placeholder="Coupon expiry in days" name="validity" class="form-control" required><br>

        <button type="submit" class="btn btn-success mt-4">Submit</button>

      </form>
    </div>
  </div>
</section>
