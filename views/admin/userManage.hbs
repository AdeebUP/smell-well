<div class="dash-container mt-5 p-4">
    <h4 class="text-center mb-5">All Users</h4>
    <section>
        <div class="container shadow p-2">
            <table class="table " id="placed">
                <thead>
                    <tr>
                        <th scope="col">Sl NO.</th>
                        <th scope="col">User Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Status</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each details}}
                    <tr>
                        <th scope="row">{{inc @index}}</th>
                        <td>{{this.username}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.phone}}</td>
                        <td>{{#if blockUsers}}
                            <a href="/admin/userManage/unblock_users/{{this._id}}" class="btn btn-danger"
                                onclick="return confirm('Are you sure to Un Block {{this.name}}?')">Unblock</a>
                            {{else}}
                            <a href="/admin/userManage/block_users/{{this._id}}" class="btn btn-primary"
                                onclick="return confirm('Are you sure to Block {{this.name}}?')">Block</a>
                            {{/if}}
                        </td>
                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>
    </section>

    <script>
        $(document).ready(function () {


            $('#user_table').wrap('<div id="hide" style="display:none"/>');

            $('#hide').css('display', 'block');
        });


        var table = $('#placed').DataTable();
    </script>
</div>

