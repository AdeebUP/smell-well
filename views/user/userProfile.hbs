{{>user-header1}}

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"
    integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
<link rel="stylesheet" type="text/css" href="stylesheets/user/profile.css">
<link rel="stylesheet" type="text/css" href="stylesheets/user/userProfile.css">

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-3 my-lg-0 my-md-1">
            <div id="sidebar" class="bg-purple">
                <div class="h4 text-white">Account</div>
                <ul>
                    <li class="active">
                        <a href="" class="text-decoration-none d-flex align-items-start">
                            <div class="fas fa-user pt-2 me-3"></div>
                            <div class="d-flex flex-column">
                                <div class="link">My Account</div>
                                <div class="link-desc">Change your profile details & password</div>
                            </div>
                        </a>
                    </li>
                    <li>
                        <a href="/view-orders" class="text-decoration-none d-flex align-items-start">
                            <div class="fas fa-user pt-2 me-3"></div>
                            <div class="d-flex flex-column">
                                <div class="link">My Orders</div>
                                <div class="link-desc">View & Manage orders and returns</div>
                            </div>
                        </a>
                    </li>
                    <li>
                        <a href="" class="text-decoration-none d-flex align-items-start">
                            <div class="far fa-address-book pt-2 me-3"></div>
                            <div class="d-flex flex-column">
                                <div class="link">Address Book</div>
                                <div class="link-desc">View & Manage Addresses</div>
                            </div>
                        </a>
                    </li>
                    <li>
                        <a href="/shoping-cart" class="text-decoration-none d-flex align-items-start">
                            <div class="far fa-user pt-2 me-3"></div>
                            <div class="d-flex flex-column">
                                <div class="link">My cart</div>
                                <div class="link-desc">View & Manage cart</div>
                            </div>
                        </a>
                    </li>
                    <li>
                        <a href="/wish-list" class="text-decoration-none d-flex align-items-start">
                            <div class="fas fa-user pt-2 me-3"></div>
                            <div class="d-flex flex-column">
                                <div class="link">My Wishlist</div>
                                <div class="link-desc">View & Manage wish-list</div>
                            </div>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-lg-9 my-lg-0 my-1">
            <div id="main-content" class="bg-white border">
                <div class="d-flex flex-column">
                    <div class="h5">Hello {{user.username}}</div>
                    <div>Logged in : {{user.email}}</div>
                </div>
                <div class="d-flex my-4 flex-wrap">

                    <div class="box me-4 my-1 bg-light">
                        <img src="https://www.freepnglogos.com/uploads/shopping-cart-png/shopping-cart-campus-recreation-university-nebraska-lincoln-30.png"
                            alt="">
                        <div class="d-flex align-items-center mt-2">
                            <div class="tag">Items in Cart</div>
                            <div class="ms-auto number">{{cartCount}}</div>
                        </div>
                    </div>
                    <div class="box me-4 my-1 bg-light">
                        <img src="https://www.freepnglogos.com/uploads/love-png/love-png-heart-symbol-wikipedia-11.png"
                            alt="">
                        <div class="d-flex align-items-center mt-2">
                            <div class="tag">Wishlist</div>
                            <div class="ms-auto number">{{wishlistCount}}</div>
                        </div>
                    </div>
                </div>

                <div class="container" style="margin-top:120px;">
                    <div class="prog-page">
                        <div class="header-title header-btn">
                            <div class="header-info">
                                <h2 style="color: rgb(223, 241, 240);"><i class="fa fa-info-circle"></i>Profile
                                    Information</h2>
                            </div>
                            <div class="header-btn-edit">
                                <a href="" type="button"><i class="fa fa-edit"></i>Edit Profile</a>
                            </div>
                        </div>

                        <div class="prof-page-info">
                            <div class="row">

                                <div class="col-md-3">

                                    <div class="prof-img">

                                        <img src="/admin/assets/img/avatars/02.jpg">
                                        <div class="img-title">
                                            <h2 style="color: rgb(223, 241, 240);">{{user.username}}</h2>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-9">


                                    <div class="prof-info">

                                        <div class="info"><label><i class="fa fa-user"></i>Full Name :</label>
                                            <span>{{user.username}}</span>
                                        </div>
                                        <div class="info"><label><i class="fa fa-map-marker"></i>Email :</label>
                                            <span>{{user.email}}</span>
                                        </div>
                                        <div class="info"><label><i class="fa fa-map-marker"></i>Phone :</label>
                                            <span>{{user.phone}}</span>
                                        </div>

                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>





    </div>


</div>

</div>

{{>user-footer}}